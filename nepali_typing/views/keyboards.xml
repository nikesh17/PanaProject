<odoo>
    <record id="view_user_keyboard_form" model="ir.ui.view">
        <field name="name">Keyboard</field>
        <field name="model">user.keyboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="1">
                        <field name="name"/>
                        <field name="char_map"/>
                        <field name="post_rules"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_user_keyboard_tree" model="ir.ui.view">
        <field name="name">Keyboard</field>
        <field name="model">user.keyboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="char_map"/>
                <field name="post_rules"/>
            </tree>
        </field>
    </record>
</odoo>