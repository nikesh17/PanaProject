<odoo>
    <data>
        <!-- Configuration Organization Type Form View -->
        <record id="view_organization_type_form" model="ir.ui.view">
            <field name="name">Organization Type</field>
            <field name="model">organization.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Configuration Organization Nature Form View -->
        <record id="view_organization_nature_form" model="ir.ui.view">
            <field name="name">Organization Nature</field>
            <field name="model">organization.nature</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nature"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Configuration Fiscal Year Form View -->
        <record id="view_fiscal_year_form" model="ir.ui.view">
            <field name="name">Fiscal Year</field>
            <field name="model">fiscal.year</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="fiscal_year"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Configuration Agriculture Crop Type tree View -->
        <record id="view_closing_reason_form" model="ir.ui.view">
            <field name="name">Organization Closing Reason</field>
            <field name="model">organization.closing.reason</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reason"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>    
    </data>
</odoo>