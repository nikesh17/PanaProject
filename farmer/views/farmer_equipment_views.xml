<odoo>
    <data>
        <record id="view_farmer_equipment_form" model="ir.ui.view">
            <field name="name">Farmer Equipment Form</field>
            <field name="model">farm.equipment</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="equipment_type"/>
                        <field name="is_rented"/>
                        <field name="capacity"/>
                        <field name="quantity"/>
                    </group>
                </form>
            </field>
        </record>
    
        <record id="view_farmer_equipment_tree" model="ir.ui.view">
            <field name="name">Farmer Equipment Tree View</field>
            <field name="model">farm.equipment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="equipment_type"/>
                    <field name="is_rented"/>
                    <field name="capacity"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>
        <record id="view_farmer_construction_form" model="ir.ui.view">
            <field name="name">Farmer Construction Form</field>
            <field name="model">farm.construction</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="construction_type"/>
                        <field name="quantity"/>
                        <field name="area"/>
                    </group>
                </form>
            </field>
        </record>
    
        <record id="view_farmer_construction_tree" model="ir.ui.view">
            <field name="name">Farmer Construction Tree View</field>
            <field name="model">farm.construction</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="construction_type"/>
                    <field name="quantity"/>
                    <field name="area"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>